{
  "name": "vscode-activity-tracker",
  "displayName": "Activity Tracker",
  "description": "ðŸ“Š Monitor your coding time, detect AFK periods, track lines typed and languages used. View real-time statistics in a beautiful dashboard.",
  "version": "1.0.0",
  "publisher": "activity-tracker",
  "author": {
    "name": "Activity Tracker Team"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/activity-tracker"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/activity-tracker/issues"
  },
  "homepage": "https://github.com/seu-usuario/activity-tracker#readme",
  "keywords": [
    "productivity",
    "time tracking",
    "activity",
    "coding time",
    "statistics",
    "dashboard",
    "afk",
    "languages",
    "metrics"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "activityTracker.showStatus",
        "title": "Activity Tracker: Show Status"
      },
      {
        "command": "activityTracker.openDashboard",
        "title": "Activity Tracker: Open Dashboard"
      }
    ],
    "configuration": {
      "title": "Activity Tracker",
      "properties": {
        "activityTracker.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:8000/api",
          "description": "URL do endpoint da API"
        },
        "activityTracker.afkTimeout": {
          "type": "number",
          "default": 300,
          "description": "Tempo em segundos para considerar AFK (padrÃ£o: 300 = 5 minutos)"
        },
        "activityTracker.syncInterval": {
          "type": "number",
          "default": 30,
          "description": "Intervalo em segundos para sincronizar com a API"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}
